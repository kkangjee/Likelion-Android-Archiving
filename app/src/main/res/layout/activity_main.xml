<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:context=".MainActivity"
        android:background="#FFFFFF"
        android:orientation="vertical" android:visibility="visible" android:id="@+id/ll_all">
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" tools:ignore="MissingConstraints" android:id="@+id/ll_all_l1">
        <ImageButton
                android:layout_width="50dp"
                android:layout_height="50dp" app:srcCompat="@drawable/camera" android:id="@+id/ll_all_l1_b1"/>
        <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent" app:srcCompat="@drawable/insta" android:id="@+id/ll_all_l1_b2"/>
        <ImageButton
                android:layout_width="50dp"
                android:layout_height="50dp" app:srcCompat="@drawable/igtv" android:id="@+id/ll_all_l1_b3"/>
        <ImageButton
                android:layout_width="match_parent"
                android:layout_height="50dp" app:srcCompat="@drawable/dm" android:id="@+id/ll_all_l1_b4"/>
    </LinearLayout>
    <View
            android:layout_width="411dp"
            android:layout_height="6dp"
            android:background="@drawable/drop_shadow" tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteY="50dp" tools:layout_editor_absoluteX="0dp">

    </View>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" tools:layout_editor_absoluteY="50dp"
            tools:layout_editor_absoluteX="0dp" android:id="@+id/ll_all_l2">
        <LinearLayout android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:orientation="vertical" android:id="@+id/ll_all_l2_l1">
            <ImageButton
                    android:layout_width="75dp"
                    android:layout_height="75dp" app:srcCompat="@drawable/hoony" android:id="@+id/ll_all_l2_l1_b1"
                    android:layout_weight="0"/>
            <TextView
                    android:text="내 스토리"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/ll_all_l2_l1_t1" android:layout_weight="0"
                    android:layout_marginStart="12dp" android:layout_marginBottom="2dp"/>
        </LinearLayout>
        <LinearLayout android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:orientation="vertical" android:id="@+id/ll_all_l2_l2">
            <ImageButton
                    android:layout_width="75dp"
                    android:layout_height="75dp" app:srcCompat="@drawable/mystory" android:id="@+id/ll_all_l2_l2_b1"
                    android:layout_weight="0"
                    android:layout_marginStart="10dp"/>
            <TextView
                    android:text="sj.lunar__"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/ll_all_l2_l2_t1" android:layout_weight="0"
                    android:textAppearance="@style/TextAppearance.AppCompat"
                    android:layout_marginStart="12dp" android:layout_marginBottom="2dp"/>
        </LinearLayout>

    </LinearLayout>

    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:orientation="vertical" android:id="@+id/ll_all_l3">
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/ll_all_l3_l1">
                <ImageButton
                        android:layout_width="25dp"
                        android:layout_height="25dp" app:srcCompat="@drawable/hoony"
                        android:layout_weight="0" tools:layout_editor_absoluteY="29dp"
                        tools:layout_editor_absoluteX="10dp" tools:ignore="MissingConstraints"
                        android:layout_marginTop="10dp" android:id="@+id/ll_all_l3_l1_b1"/>
                <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" android:layout_weight="0"
                        android:id="@+id/ll_all_l3_l1_l1">
                    <TextView
                            android:text="hoony_hooni"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" android:id="@+id/ll_all_l3_l1_l1_t1"
                            android:textAppearance="@style/TextAppearance.AppCompat" android:textSize="15sp"
                            android:layout_marginTop="10dp"/>
                    <TextView
                            android:text="서울시립대학교 - University of Seoul"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" android:id="@+id/ll_all_l3_l1_l1_t2"
                            android:textAppearance="@style/TextAppearance.AppCompat"/>
                </LinearLayout>
                <ImageButton
                        android:layout_width="20dp"
                        android:layout_height="20dp" app:srcCompat="@drawable/menu"
                        android:id="@+id/ll_all_l3_l1_b2"
                        android:layout_marginStart="100dp"
                        android:layout_marginTop="18dp"/>

            </LinearLayout>
            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/ll_all_l3_l2">
                <android.support.v4.view.ViewPager
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:layout_editor_absoluteY="8dp"
                        tools:layout_editor_absoluteX="8dp"
                        android:id="@+id/vpMainActivity"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="parent">
                </android.support.v4.view.ViewPager>

                <!--<ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="385dp" app:srcCompat="@drawable/photo" android:id="@+id/ll_all_l3_l2_i1"/>
                        -->
                <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" android:id="@+id/ll_all_l3_l2_l1">
                    <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="40dp" android:id="@+id/ll_all_l3_l2_l1_l1">
                        <ImageButton
                                android:layout_width="38dp"
                                android:layout_height="38dp" app:srcCompat="@drawable/test"
                                android:id="@+id/ll_all_l3_l2_l1_l1_b1"
                                android:layout_weight="0"
                                android:layout_marginTop="3dp"/>
                        <Button
                                android:background="@drawable/datgeul"
                                android:layout_marginTop="3dp"
                                android:layout_width="38dp"
                                android:layout_height="38dp" app:srcCompat="@drawable/datgeul"
                                android:id="@+id/ll_all_l3_l2_l1_l1_b2"
                                android:layout_weight="0"/>
                        <ImageButton
                                android:layout_width="38dp"
                                android:layout_height="38dp" app:srcCompat="@drawable/share"
                                android:id="@+id/ll_all_l3_l2_l1_l1_b3"
                                android:layout_marginTop="5dp"
                                android:layout_weight="0"/>
                        <ImageButton
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent" app:srcCompat="@drawable/mark"
                                android:id="@+id/ll_all_l3_l2_l1_l1_b4"
                                android:layout_weight="0"
                                android:layout_marginStart="250dp"/>
                    </LinearLayout>
                    <TextView
                            android:text="좋아요 319개"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" android:id="@+id/ll_all_l3_l2_l1_l1_t1"
                            android:textAppearance="@style/TextAppearance.AppCompat"
                            android:layout_marginTop="5dp"
                            android:layout_marginStart="10dp" android:textStyle="bold"/>
                    <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" android:id="@+id/ll_all_l3_l2_l1_l2">
                        <TextView
                                android:text="sj.lunar__"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" android:id="@+id/ll_all_l3_l2_l1_l2_t1"
                                android:layout_weight="1"
                                android:textAppearance="@style/TextAppearance.AppCompat"
                                android:layout_marginStart="10dp" android:textStyle="bold"/>
                        <TextView
                                android:text="멋쟁이 사자처럼 화이팅!!"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" android:id="@+id/ll_all_l3_l2_l1_l2_t2"
                                android:layout_weight="0"
                                android:textAppearance="@style/TextAppearance.AppCompat"
                                android:fontFamily="sans-serif-thin"
                                android:layout_marginStart="10dp"
                        />
                    </LinearLayout>
                    <TextView
                            android:text="댓글 26개 모두 보기"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/ll_all_l3_l2_l1_t1"
                            android:layout_marginTop="3dp"
                            android:layout_marginStart="10dp"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>